{
  "manifest_version": 2,
  "name": "UZ Ticker",
  "version": "1.0.0",
  "description": "Ticker for booking.uz.gov.ua",
  "background": {
    "persistent": true,
    "scripts": ["commons.js", "background.js"]
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "img/icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "*://booking.uz.gov.ua/*"
  ],
  "icons": {
    "16": "img/icon16.png"
  }
}